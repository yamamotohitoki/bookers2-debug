<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.favorited?(current_user) %>
            <td><%= link_to book_favorites_path(@book.id), method: :delete do %>
              <span style="color:red;">❤︎</span> <%=@book.favorites.count %></td>
            <% end %>
            <% else %>
              <td><%= link_to book_favorites_path(@book.id), method: :post do %>
              <span>♡︎</span> <%=@book.favorites.count %></td>
            <% end %>
          <% end %>

          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
           <td>コメント数：<%= @book.comments.count %> </td>
        </tr>
      </table>
      <h2>Comment</h2>
      <table class="table">
        <tr>
          <td><% @book.comments.each do |comment| %>
                <%= link_to(comment.user) do %>
                <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
                <%= comment.user.name %></td>
              <% end %>
                <td><%= comment.comment %></td>
                <% if comment.user == current_user %>
                <td><%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
                <% end %>
            <% end %>
        </tr>
       </table>
       <%= form_with model: [@book, @comment] do |f| %>
         <%= f.text_area :comment, class: 'form-control', style: "width:100%", rows: "5" %><br>
         <%= f.submit "送信" %>
       <% end %>
    </div>
  </div>
</div>